<%-include("header")-%>
    <div class="box" id="heading">
        <h1>
            <%=day%>

        </h1>

        <h1>
            <%=title%> List
        </h1>

    </div>

    <div class="box">
        <%for(let i=0;i<listItem.length;i++){%>
            <div class="item">
                <input type="checkbox">
                <p>
                    <%=listItem[i]%>
                </p>

            </div>
            <%}%>

                <form action="/" method="post">
                    <input type="text" name="newItem" placeholder="New Item">
                    <button type="submit" name="list" value=<%=title%>>+</button>
                </form>
    </div>


    <%-include("footer")-%>